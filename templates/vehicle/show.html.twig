{% extends 'base.html.twig' %}

{% block title %}Vehicle{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ "Vehicle"|trans }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ vehicle.id }}</td>
                </tr>
                <tr>
                    <th>{{ "Number"|trans }}</th>
                    <td>{{ vehicle.number }}</td>
                </tr>
                <tr>
                    <th>{{ "Is_active"|trans }}</th>
                    <td>{{ vehicle.isActive ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('vehicle_index') }}">{{ "back to list"|trans }}</a>

        <a href="{{ path('vehicle_edit', {'id': vehicle.id}) }}">{{ "edit"|trans }}</a>

        {{ include('vehicle/_delete_form.html.twig') }}
    </div>
{% endblock %}
